   <main>
      <h1><%= title %></h1>
      <%- messages() %>
     
      <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>
     
      <form action="/inv/add-classification" method="post">
        <p><strong>Note:</strong> Classification name must not contain spaces or special characters.</p>
       
        <label for="classification_name">Classification Name:</label>
        <input type="text" id="classification_name" name="classification_name" required
               pattern="^[A-Za-z0-9]+$"
               title="Classification name must not contain spaces or special characters"
               value="<%= locals.classification_name %>">
       
        <button type="submit">Add Classification</button>
      </form>
     
      <p><a href="/inv/">Back to Management</a></p>
    </main>