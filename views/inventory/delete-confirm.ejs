<h1><%= title %></h1>
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
  <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
  <% }) %>
  </ul>
<% } %>

<p><strong>Confirm Deletion</strong> - The delete is permanent and cannot be undone.</p>

<form action="/inv/delete" method="post">
  <label for="inv_make">Vehicle Make:</label>
  <input type="text" id="inv_make" name="inv_make" readonly
         value="<%= locals.inv_make %>">

  <label for="inv_model">Vehicle Model:</label>
  <input type="text" id="inv_model" name="inv_model" readonly
         value="<%= locals.inv_model %>">

  <label for="inv_year">Vehicle Year:</label>
  <input type="number" id="inv_year" name="inv_year" readonly
         value="<%= locals.inv_year %>">

  <label for="inv_price">Vehicle Price:</label>
  <input type="number" id="inv_price" name="inv_price" readonly
         value="<%= locals.inv_price %>">

  <input type="hidden" name="inv_id" value="<%= locals.inv_id %>">

  <button type="submit">Delete Vehicle</button>
</form>